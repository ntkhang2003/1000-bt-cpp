#include <iostream>
#include <cmath>
using namespace std;
void nhap(float *a, int n)
{
    for (int i = 0; i < n ; i++){
        cout << "Nhap phan tu thu " << i+1 << ": ";
        cin >> a[i];
    }
}
void xuat(float *a, int n)
{
    for (int i = 0; i < n; i++){
        cout << a[i] << " ";
    }
}
void XoaPhanTu(float *a, int &n, int k)
{
    for (int i = k;i < (n-1); i++)
    {
        a[i]=a[i+1];
    }
    n--;
}
float TimMax(float *a ,int n)
{
    float max = a[0];
    for (int i = 0; i < n; i++){
        if (a[i] > max)
            max = a[i];
    }
    return max;
}
void XoaMax(float *a, int &n)
{
    float max = TimMax(a, n);
    for (int i = 0; i < n; i++){
        if (a[i] == max)
            XoaPhanTu(a, n, i);
            //i--;
    }
    
}
int main()
{   
    int n, k;
    cout << "Nhap so phan tu: ";
    cin >> n;
    float a[n];
    nhap(a, n);
    XoaMax(a, n);
    xuat(a, n);
    return 0;
}
